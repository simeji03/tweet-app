<div class="main user-show">
  <div class="container">
    <div class="user">
      <%= image_tag "/user_images/#{@user.image_name}" %>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <div class="follow-bar">
        <ul class="user-follows">
          <li><%= link_to("フォロー中 #{@user.followings.count}", "/users/#{@user.id}/followings") %></li>
          <li class="active"><%= link_to("フォロワー #{@user.followers.count}", "/users/#{@user.id}/followers") %></li>
        </ul>
        <div class="user-button">
          <% if @current_user.id == @user.id %>
            <%= link_to("/users/#{@user.id}/edit") do %>
              <i class="fas fa-cog"></i>
            <% end %>
          <% else %>
            <%= render "relationships/follow_button", user: @user %>
          <% end %>
        </div>
      </div>
    </div>
    <ul class="user-tabs">
      <li><%= link_to("投稿", "/users/#{@user.id}") %></li>
      <li><%= link_to("いいね!", "/users/#{@user.id}/likes") %></li>
    </ul>
    <div class="follow_user">
      <% @followers.each do |follower| %>
        <div class="users-index-item">
          <div class="user-left">
            <%= image_tag "/user_images/#{follower.image_name}" %>
          </div>
          <div class="user-right">
            <%= link_to(follower.name, "/users/#{follower.id}") %>
            <%= render "relationships/follow_button", user: follower %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>