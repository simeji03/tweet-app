<div class="main users-new">
  <div class="container">
    <div class="form-heading">新規ユーザー登録</div>
    <%= form_tag("/users/create") do %>
      <div class="form users-form">
        <div class="form-body">
          <% @user.errors.full_messages.each do |message| %>
            <div class="form-error">
              <%= message %>
            </div>
          <% end %>
          <div class="form-group">
            <%= label_tag "user_name", "ユーザー名" %>
            <%= text_field :users, :name, id:"user_name", value: @user.name %>
          </div>
          <div class="form-group">
            <%= label_tag "user_email", "メールアドレス" %>
            <%= text_field :users, :email, id:"user_email", value: @user.email %>
          </div>
          <div class="form-group">
            <%= label_tag "user_password", "パスワード" %>
            <%= password_field :users, :password, id:"user_password", value: @user.password %>
          </div>
          <%= submit_tag "新規登録" %>
        </div>
      </div>
    <% end %>
  </div>
</div>